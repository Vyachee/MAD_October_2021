<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mad_october_2021">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MADOctober2021"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".main_screen.MainScreenActivity"
            android:exported="false" />
        <activity
            android:name=".sign_up.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".sign_in.SignInActivity"
            android:exported="false" />
        <activity
            android:name=".auth_select.SelectAuthActivity"
            android:exported="false" />
        <activity
            android:name=".splash.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>